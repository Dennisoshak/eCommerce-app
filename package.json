  "version": "1.0.0",
  "description": "MERN eCommerce application for ITC team project",
  "engines": {
    "node": "16.14.2"
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
