    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.6.0",
